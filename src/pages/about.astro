---
import Heading from "../components/Heading.astro";
import Layout from "../layouts/Layout.astro";
const placeholder = "./ashlyn-arts-website/placeholder.png";
---

<Layout title="About me">
    <section class="pt-10 overflow-hidden md:pt-0 sm:pt-16 2xl:pt-16">
        <div class="px-4 mx-auto sm:px-6 lg:px-8 max-w-7xl">
            <div class="grid items-center grid-cols-1 md:grid-cols-2">
                <div>
                    <h2
                        class="text-3xl font-bold leading-tight sm:text-4xl lg:text-5xl"
                    >
                        I am
                        <br class="block sm:hidden" /><span
                            class="text-pink-600/60">Ashlyn Chilson</span
                        >
                    </h2>
                    <p
                        class="max-w-lg mt-3 text-xl leading-relaxed text-gray-600 md:mt-8"
                    >
                        Amet minim mollit non deserunt ullamco est sit aliqua
                        dolor do amet sint. Velit officia consequat duis enim
                        velit mollit. Exercitation veniam consequat sunt nostrud
                        amet.
                    </p>

                    <p class="mt-4 text-xl text-gray-600 md:mt-8">
                        <span class="relative inline-block">
                            <span
                                class="absolute inline-block w-full bottom-0.5 h-2 bg-purple-300"
                            ></span>
                            <span class="relative"> Check my work!</span>
                        </span>
                        <!-- <br class="block sm:hidden" /><a
                            href="#"
                            title=""
                            class="transition-all duration-200 text-pink-500 hover:text-sky-600 hover:underline"
                            >Get in touch</a
                        > -->
                    </p>
                </div>

                <div class="relative">
                    <div
                        id="blob"
                        class="bg-gradient-to-r from-purple-500/25 blur-lg to-pink-500/25 h-96 w-96 aspect-square  left-1/2 top-1/2 rounded-full absolute inset-x-0 bottom-0 -mb-20 -translate-x-1/2  opacity-50"
                    >
                    </div>
                    <!-- <svg class="absolute inset-x-0 bottom-0 -mb-20 -translate-x-1/2 left-1/2 opacity-30"
                     xmlns="http://www.w3.org/2000/svg" width="540" height="545" viewBox="0 0 551 545" fill="none">
                        <path d="M551 224.656C551 373.677 434.779 545 285.54 545C136.3 545 15.3176 424.195 15.3176 275.174C15.3176 126.154 -52.379 0 96.8605 0C246.1 0 551 75.636 551 224.656Z" fill="url(#paint0_linear)"/>
                        <defs>
                        <linearGradient id="paint0_linear" x1="11.4792" y1="0.000136836" x2="567.423" y2="17.3016" gradientUnits="userSpaceOnUse">
                        <stop stop-color="#db2777"/>
                        <stop offset="1" stop-color="#a855f7"/>
                        </linearGradient>
                        </defs>
                        </svg> -->
                    <img
                        class="relative w-3/4 xl:max-w-lg xl:mx-auto 2xl:origin-bottom "
                        src={placeholder}
                        alt=""
                    />
                </div>
            </div>
        </div>
    </section>
</Layout>
